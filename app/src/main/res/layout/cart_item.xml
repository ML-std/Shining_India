<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_margin="4dp"
        android:background="#6A75B1">


        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="91dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:contentDescription="@string/food_image" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="104dp"
            android:layout_height="67dp"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/itemImageView"
            android:layout_toRightOf="@id/itemImageView"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="96dp"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/price"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/quantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="29dp"
            android:layout_toStartOf="@+id/priceTextView"
            android:layout_toEndOf="@+id/nameTextView"
            android:layout_toRightOf="@+id/nameTextView"
            android:text="@string/quantity_text"
            android:layout_toLeftOf="@+id/priceTextView" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>