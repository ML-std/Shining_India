<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_margin="4dp"
        android:background="#6A75B1">


        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/food_image"
            android:padding="2dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="145dp"
            android:layout_height="100dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/itemImageView"
            android:layout_toRightOf="@id/itemImageView"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="70dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/quantityTextView"
            android:layout_toRightOf="@+id/quantityTextView"
            android:text="@string/price"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/quantityTextView"
            android:layout_width="40dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/nameTextView"
            android:layout_toRightOf="@+id/nameTextView"
            android:text="@string/quantity_text" />

        <ImageView
            android:id="@+id/deleteView"
            android:layout_width="51dp"
            android:layout_height="111dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_toEndOf="@+id/priceTextView"
            android:layout_toRightOf="@+id/priceTextView"
            android:contentDescription="@string/deleteimage"
            app:srcCompat="@drawable/ic_baseline_delete_24" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>